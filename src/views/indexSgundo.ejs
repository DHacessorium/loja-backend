<!DOCTYPE html>
<html lang="pt-br">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/css/reset.css">
  <link rel="stylesheet" href="/slick-1.8.1/slick/slick.css">
  <link rel="stylesheet" href="/slick-1.8.1/slick/slick-theme.css">
  <link rel="stylesheet" href="/css/home.css">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300&display=swap" rel="stylesheet">

  <title>Home</title>
</head>

<body>

  <header>
    <nav class="cabecalho">
      <div class="logo">
        <a href="/"><img class="img-logo-home" src="/images/logo.svg"></a>
      </div>
      <button class="menu-toggle">Menu</button>
      <ul class="menu">
        <li><a href="/">Home</a></li>
        <li><a href="pulseiras">Pulseiras</a></li>
        <li><a href="brincos">Brincos</a></li>
        <li><a href="colares">Colares</a></li>
        <li><a href="carrinho2">Carrinho</a></li>
        <li><a href="login">Login</a></li>
      </ul>

    </nav>
  </header>

  <div class="container products-wrapper">
    <div class="row">
      <div class="col-12">
        <h2 class="products-title">Ofertas</h2>
      </div>
      <% products.forEach((product)=> { let finalPrice = (product.price * ((100 - product.discount) / 100)).toFixed(0) %>
        <div class="col-12 col-sm-6 col-lg-3">
          <section class="product-box">
            <a href="/product/detail/<%= product.id %>">
              <figure class="product-box_image">
                <img src="/images/<%= product.image %>" alt="imagen do produto">
              </figure>
              <article class="product-box_data">
                <h2>
                  <%= toThousand(finalPrice) %>
                </h2>
                <span>
                  <%= product.discount %> %OFF
                </span>
                <p>
                  <%= product.name %>
                </p>
                <i class="fas fa-truck"></i>
              </article>
            </a>
          </section>
        </div>
        <% }) %>
    </div>
  </div>

  

  <footer class="rodape">
    <div class="infos_rodape">
      <ul>
        <li><a href="/">Institucional</a></li>
        <li><a href="/">Como comprar</a></li>
        <li><a href="/">Segurança</a></li>
        <li><a href="/">Garantia</a></li>
        <li><a href="/">Dúvidas frequente</a></li>
      </ul>

    </div>

    <div class="infos_rodape">
      <ul>
        <li><a href="/"> Entregas</a></li>
        <li><a href="/">Trocas e devoluções</a></li>
        <li><a href="/">Políticas de Privacidade</a></li>
        <li><a href="/">Políticas de envio</a></li>
        <li><a href="/">Fale conosco</a></li>
      </ul>
    </div>

    <div class="redes_rodape">
      <ul>
        <li><a href="https://www.facebook.com"><img class="logo_footer" src="/images/footer_face_logo.png"></a></li>
        <li><a href="https://www.instagram.com"><img class="logo_footer" src="images/instagram.svg"></a></li>
        <li><a href="https://www.twitter.com"><img class="logo_footer" src="/images/footer_twitter_logo.png"></a></li>

      </ul>

    </div>

  </footer>


  <script type="text/javascript" src="//code.jquery.com/jquery-1.11.0.min.js"></script>
  <script src="./slick-1.8.1/slick/slick.js"></script>
  <script src="./js/script.js"></script>



</body>

</html>