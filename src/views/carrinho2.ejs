  <title>Carrinho</title>
</head>

<body>

  <!-- Header -->
  <%- include('includes/header') %>

  <main class="principal">

    <div class="img-produto-carrinho">
      <img src="/images/produto1.png">
      <h2>Resumo Produto</h2>
      <p>XXXXXXXXXXXX-XXXXXXX</p>


    </div>

    <div class="desc-produto-carrinho">
      <ul>
        <li>
          <p>Cor</p>
